{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 3,
  "editor.lineHeight": 22,
  "editor.fontSize": 12,
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark",

  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  // Markdown Preview Enh
  "markdown-preview-enhanced.alwaysShowBacklinksInPreview": true,
  "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,

  "workbench.colorCustomizations": {
    // Explorateur de fichier
    "tree.indentGuidesStroke": "#fdfdfd", //Couleur des guides actifs
    "tree.inactiveIndentGuidesStroke": "#323333", // Couleur des guides inactifs
    "list.inactiveSelectionBackground": "#3A3D41", // Fond de l'élément non actif

    // Editeur de texte
    "editorIndentGuide.background1": "#444444", // Couleur des guides inactifs
    "editorIndentGuide.activeBackground1": "#FFFFFF" // Couleur des guides actifs
  },

  "workbench.startupEditor": "none",
  "workbench.tree.indent": 14,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },

  // Matériel icon
  "material-icon-theme.hidesExplorerArrows": true, // Affiche ou masque les flèches d'exploration
  "material-icon-theme.folders.theme": "specific", // Thème des dossiers
  "material-icon-theme.folders.color": "#90a4ae", // Couleur des dossiers

  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "javascript.validate.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "npm.runSilent": true,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnPaste": false,
  "files.autoSave": "onFocusChange",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.smoothScrolling": true,
  "explorer.confirmDelete": false,

  "window.zoomLevel": 0,
  "git.autofetch": true,
  "explorer.confirmPasteNative": false,

  "terminal.integrated.defaultProfile.windows": "Ubuntu-22.04 (WSL)",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "typescript": true
  },
  "git.openRepositoryInParentFolders": "never",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
